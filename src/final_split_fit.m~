function [YZX, indeces, fit1, fit2, gof1, gof2] = final_split_fit(save)
% Split final.dat and final.sdat into two sets by first fitting a single 
% plane to data and then use the plane to divide the data into two
% different sets.

fid = fopen('../data/final.dat');
X = fscanf(fid, '%f\n');
fid = fopen('../sdata/final.sdat');
ret = fscanf(fid, '%f %f\n', [2, 20000]);
Y = transpose(ret(1, :));
Z = transpose(ret(2, :));
YZX = [Y, Z, X];
[YZX1, YZX2, indeces] = split_final(Y, Z, X);
Y1 = YZX1(:,1);
Z1 = YZX1(:,2);
X1 = YZX1(:,3);
Y2 = YZX2(:,1);
Z2 = YZX2(:,2);
X2 = YZX2(:,3);

% DATAPOINTS UNDER THE PLANE
[xData, yData, zData] = prepareSurfaceData( Y1, Z1, X1 );
% Set up fittype and options.
ft = fittype( 'poly55' );
% Fit model to data.
[fit1, gof1] = fit( [xData, yData], zData, ft );


% DATAPOINTS ABOVE THE PLANE
[xData, yData, zData] = prepareSurfaceData( Y2, Z2, X2 );
% Set up fittype and options.
ft = fittype( 'poly55' );
% Fit model to data.
[fit2, gof2] = fit( [xData, yData], zData, ft );

if save
  fid = fopen('final_split1_coefs.txt', 'w');
  fprintf(fid, 'Linear model Poly55:\nfit2(x,y) = p00 + p10*x + p01*y + p20*x^2 + p11*x*y + p02*y^2 + p30*x^3\n+ p21*x^2*y + p12*x*y^2 + p03*y^3 + p40*x^4 + p31*x^3*y\n+ p22*x^2*y^2 + p13*x*y^3 + p04*y^4 + p50*x^5 + p41*x^4*y\n+ p32*x^3*y^2 + p23*x^2*y^3 + p14*x*y^4 + p05*y^5\n\n');
  fprintf(fid, fit1.p00, fit1.p10, fit1.p01, fit1.p20, fit1.p11, fit1.p02, fit1.p30, fit1.p21, fit1.p12, fit1.p03, fit1.p40, fit1.p31, fit1.p22, fit1.p13, fit1.p04, fit1.p50, fit1.p41, fit1.p32, fit1.p23, fit1.p14, fit1.p05);
  fclose(fid);
  
  fid = fopen('final_split2_coefs.txt', 'w');
  fprintf(fid, 'Linear model Poly55:\nfit2(x,y) = p00 + p10*x + p01*y + p20*x^2 + p11*x*y + p02*y^2 + p30*x^3\n+ p21*x^2*y + p12*x*y^2 + p03*y^3 + p40*x^4 + p31*x^3*y\n+ p22*x^2*y^2 + p13*x*y^3 + p04*y^4 + p50*x^5 + p41*x^4*y\n+ p32*x^3*y^2 + p23*x^2*y^3 + p14*x*y^4 + p05*y^5\n\n');
  fprintf(fid, fit2.p00, fit2.p10, fit2.p01, fit2.p20, fit2.p11, fit2.p02, fit2.p30, fit2.p21, fit2.p12, fit2.p03, fit2.p40, fit2.p31, fit2.p22, fit2.p13, fit2.p04, fit2.p50, fit2.p41, fit2.p32, fit2.p23, fit2.p14, fit2.p05);
  fclose(fid);
  
  fid = fopen('final_split_indeces.txt', 'w');
  fprintf(fid, repmat('%g', 1, size(indeces)), indeces);
  fclose(fid);
  
  fid = fopen('final_residuals.txt', 'w');
  n = sizeY
end;